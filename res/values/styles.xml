<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AndroidDevelopers" parent="android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_community</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Community</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Community</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Community</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Community</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Community</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_community</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_community</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Community</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonAppTheme</item>
    </style>

    <style name="DescriptionDialogGirl" parent="@android:style/Theme.Dialog">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowNoTitle">false</item>
    </style>
    
    <style name="DescriptionDialogBoy" parent="@android:style/Theme.Dialog">
        <item name="android:background">@drawable/dialog_background_boy</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="CommunityTitle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="CommunityTextSmall" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommunityTextMedium" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CommunityTextLarge" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ActionBar.Solid.Community" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_community</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_community</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_community</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Community</item>
    </style>

    <style name="ActionBar.Transparent.Community" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_community</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Community</item>
    </style>

    <style name="PopupMenu.Community" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_community</item>
    </style>

    <style name="DropDownListView.Community" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_community</item>
    </style>

    <style name="ActionBarTabStyle.Community" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_community</item>
    </style>

    <style name="DropDownNav.Community" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_community</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_community</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_community</item>
    </style>

    <style name="ProgressBar.Community" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_community</item>
    </style>

    <style name="ActionButton.CloseMode.Community" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_community</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Community.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Community</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Community</item>
    </style>

    <!-- this style is for full screen for splash -->
    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- this style is for alert dialog -->
    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:textColor">@color/community_light_green</item>
        <item name="android:windowContentOverlay">@drawable/background</item>
    </style>

    <!-- this style is for edit text -->

    <style name="EditTextAppTheme" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:textColor">@color/community_green</item>
    </style>

    <style name="RadioButtonAppTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_dark</item>
        <item name="android:windowContentOverlay">@drawable/background</item>
    </style>

    <!-- <style name="RatingBarAppTheme" parent="android:Widget.RatingBar"> -->
    <!-- <item name="android:progressDrawable">@drawable/ratingbar_full_holo_dark</item> -->
    <!-- <item name="android:indeterminateDrawable">@drawable/ratingbar_full_holo_dark</item> -->
    <!-- </style> -->

</resources>